<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FuriaFanApp" parent="android:Theme.DeviceDefault.NoActionBar">
        <item name="android:statusBarColor">@color/furia_black</item>
        <item name="android:navigationBarColor">@color/furia_black</item>
        <item name="android:windowBackground">@color/furia_black</item>
    </style>

    <style name="Theme.FuriaFanApp.Splash" parent="Theme.FuriaFanApp">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>